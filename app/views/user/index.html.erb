<div class="login-content">
    <!-- Login -->
     <div class="lc-block toggled" id="l-login">
        <%= form_with scope: :user, url: '/login', local: true do |f| %>
        <div class="lcb-form">
          <h1 class="title">SIGN IN</h1>
            <div class="form-group">
                <div class="fg-line">
                    <%= f.text_field :email, :class => "form-control", :placeholder => 'Email', :required => true %>
                </div>
            </div>

            <div class="form-group">
                <div class="fg-line">
                    <%= f.password_field :password, :class => "form-control", :placeholder => 'Password', :required => true %>
                </div>
            </div>

             <%= f.button :submit, :class => 'btn btn-login btn-success' do %>
              <i class="material-icons">arrow_forward</i>
            <% end %>
        </div>
        <% end %>
        <div class="lcb-navigation">
            <a href="" data-ma-action="login-switch" data-ma-block="#l-register">
              <i class="material-icons">add</i>
              <span>Sign Up</span>
            </a>
        </div>
    </div>
    <!-- Register -->
    <div class="lc-block" id="l-register">
        <%= form_with scope: :user, url: '/signup', local: true do |f| %>
        <div class="lcb-form">
          <h1 class="title">SIGN UP</h1>
            <div class="form-group">
                <div class="fg-line">
                    <%= f.text_field :first_name, :class => 'form-control', :placeholder => "First Name", :required => true %>
                </div>
            </div>
            <div class="form-group">
                <div class="fg-line">
                    <%= f.text_field :last_name, :class => 'form-control', :placeholder => "Last Name", :required => true %>
                </div>
            </div>
            <div class="form-group">
                <div class="fg-line">
                    <%= f.text_field :dob, :class => 'form-control', :placeholder => "mm/dd/yyyy", :required => true %>
                </div>
            </div>
            <div class="form-group">
                <div class="fg-line">
                    <%= f.text_field :email, :class => 'form-control', :placeholder => "Email", :required => true %>
                </div>
            </div>
            <div class="form-group">
                <div class="fg-line">
                    <%= f.password_field :password, :class => 'form-control', :placeholder => "Password", :required => true %>
                </div>
            </div>
            <div class="form-group">
                <div class="fg-line">
                    <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => "Password Confirmation", :required => true %>
                </div>
            </div>
            <%= f.button :submit, :class => 'btn btn-login btn-success' do %>
              <i class="material-icons">check</i>
            <% end %>
        </div>
        <% end %>
        <div class="lcb-navigation">
            <a href="" data-ma-action="login-switch" data-ma-block="#l-login">
              <i class="material-icons">arrow_forward</i>
              <span>Sign in</span>
            </a>
        </div>
    </div>
</div>
